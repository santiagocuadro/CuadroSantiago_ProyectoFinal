
<section class="mt-5">
	<h2 class="text-danger">Historial</h2>
	{{#unless productos}}
	<h4 class="text-bg-danger p-3">no se encontraron datos</h4>
	{{else}}
	<table class="table table-dark">
		<thead>
			<tr >
				<th>Nombre</th>
				<th>Descripcion</th>
				<th>Codigo</th>
				<th>Foto</th>
				<th>Precio</th>
				<th>stock</th>
				<th>Fecha de creacion</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each productos}}
			<tr>
				<td> {{this.title}} </td>
				<td> {{this.description}} </td>
				<td> {{this.code}} </td>
				<td> <img style="height: 3rem;" src="{{this.thumbnail}}" alt="imagen producto"> </td>
				<td> {{this.price}} </td>
				<td> {{this.stock}} </td>
				<td> {{this.timestamp}} </td>
				<td> <button class="btn btn-warning float-right mt-2" onclick="addProduct(event)" > Agregar </button> </td>
			</tr>
			{{/each}}
		</tbody>

	</table>
	{{/unless}}
</section>


<button id="boton" onclick='document.getElementById("boton").addEventListener("click", addProduct)' > Agregar </button>




