<div class="container bg-light p-4">

    <div class="container mt-3">
        <h1 class="alert alert-success">
            Bienvenido, 
            {{ username }}
            
                <button class="btn btn-warning float-right mt-2" onclick="location.href='/logout'">
                    Desloguear
                </button>
        </h1>
    </div>

    <section>
        <h2 class="text-primary">Ingrese producto</h2>
        {{> form metodo='POST' action='/productos' }}
    </section>

    <section class="mt-5">
        <h2 class="text-danger">Historial</h2>
        {{#unless productos}}
        <h4 class="text-bg-danger p-3">no se encontraron datos</h4>
        {{else}}
        <table class="table table-dark">
            <thead>
                <tr class="text-warning">
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Codigo</th>
                    <th>Foto</th>
                    <th>Precio</th>
                    <th>stock</th>
                    <th>Fecha de creacion</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <td>
                        {{title}}
                    </td>
                    <td>
                        {{description}}
                    </td>
                    <td>
                        {{code}}
                    </td>
                    <td>
                        <img style="height: 3rem;" src="{{thumbnail}}" alt="imagen producto">
                    </td>
                    <td>
                        {{price}}
                    </td>
                    <td>
                        {{stock}}
                    </td>
                    <td>
                        {{timestamp}}
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
        {{/unless}}
    </section>
</div>